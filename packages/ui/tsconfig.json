{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // ✅ Output everything to "dist"
    "outDir": "./dist",
    "rootDir": "./src",
    
    // ✅ Generate the type definitions (.d.ts)
    "declaration": true,
    "declarationMap": true,
    
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}